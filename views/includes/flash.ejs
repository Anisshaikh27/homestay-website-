<!-- bootstrap flash message -->

<div class="container">
    <% if (success.length > 0) { %>
        <div class="alert alert-success alert-dismissible"><%= success %>
        <!-- bootstrap button for dismissal -->
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    <% if (error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible"><%= error %>
         <!-- bootstrap button for dismissal -->
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        
        </div>
    <% } %>
</div>