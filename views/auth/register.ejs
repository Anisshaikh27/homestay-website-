<% layout('./layouts/boilerplate') %>

<body>
    <div class="row col-8 offset-2">
        <h1>Sign Up</h1>
        <form action="/auth/register" method="POST" class="needs-validation" novalidate>
            <div class="form-group">
                <label for="email">Email:</label>
                <input class="form-control" type="email" id="email" name="email" required><br>
                <div class="invalid-feedback">
                    Please choose a valid email
                </div>
            </div>
            <div class="form-group">
                <label for="username">Username:</label>
                <input class="form-control" type="text" id="username" name="username" required><br>
                <div class="invalid-feedback">
                    Please choose a username
                </div>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input class="form-control" type="password" id="password" name="password" required><br>
                <div class="invalid-feedback">
                    Please choose a password
                </div>
            </div>
            <input class="btn btn-outline-danger" type="submit" value="Sign Up">
        </form>
    </div>
</body>