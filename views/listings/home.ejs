<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HOME PAGE</title>
</head>
<body>
    <header>
        <div id="headerdiv">
            <span> home </span> <button><a href="/home/add">add new data</a></button>
        </div>
    </header>
    <main>
        <div id="maindiv">
          <% listings.forEach((listing) => { %>
            <div class="list"></div>
            <h2><%= listing.title %></h2>
            <p><%= listing.description %></p>
            <img src="<%= listing.image.url %>" alt="<%= listing.title %>" />
            <p>Price: $<%= listing.price %></p>
            <p>Location: <%= listing.location %></p>
            <p>Country: <%= listing.country %></p>
            <button onclick="window.location.href='/home/details/<%= listing._id %>'">details</button>  
            <button onclick="window.location.href='/home/edit/<%= listing._id %>'">edit</button>
            <button onclick="window.location.href='/home/delete/<%= listing._id %>'">delete</button>      
            <% }) %>
        </div>
    </main>
    <footer>
        <div id="footerdiv">
            <span> footer </span>
        </div>
    </footer>
