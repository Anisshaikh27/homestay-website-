<% layout('./layouts/boilerplate') %>
<body>
    <header>
        <div id="headerdiv">
            <span> home </span>
        </div>
    </header>
    <main>
        <div id="maindiv">
            <form action="/home/edit/<%= result._id %>" method="POST">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" value="<%= result.title %>"><br>

                <label for="description">Description:</label>
                <input type="text" id="description" name="description" value="<%= result.description %>"><br>

                <label for="price">Price:</label>
                <input type="number" id="price" name="price" value="<%= result.price %>"><br>

                <label for="location">Location:</label>
                <input type="text" id="location" name="location" value="<%= result.location %>"><br>

                <label for="country">Country:</label>
                <input type="text" id="country" name="country" value="<%= result.country %>"><br>
                
                <input type="submit" value="Submit">
            </form>
        </div>
    </main>
    <footer>
        <div id="footerdiv">    
            <span> footer </span>
        </div>
    </footer>
</body>
