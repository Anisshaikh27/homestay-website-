<% layout('./layouts/boilerplate') %>
<body>
    <main>
      <h3><strong> New Listing </strong></h3>
      <div class="row mt-5">
        <div class="col-8 offset-2">
            <form action="/home/edit/<%= result._id  %>" method="POST" class="needs-validation" novalidate>
                <div class="form-group">
                    <label for="title" class="form-label">Title:</label>
                    <input class="form-control" type="text" id="title" name="title" value="<%= result.title %> " required><br>
                    <div class="invalid-feedback">
                        Please choose a title
                    </div>
                </div>

                <div class="form-group">
                    <label for="description" class="form-label">Description:</label>
                    <textarea class="form-control" id="description" name="description" rows="3" required><%= result.description %></textarea>
                    <div class="invalid-feedback">
                        Please write a description
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="image" class="form-label">Image:</label>
                    <input class="form-control" type="url" id="image" name="image" value="<%= result.image.url %> " required><br>
                </div>

                
                <div class="form-group col-8">
                    <label for="location" class="form-label">Location:</label>
                    <input class="form-control" type="text" id="location" name="location"  value="<%= result.location %> " required><br>
                    <div class="invalid-feedback">
                        Please choose a location
                    </div>
                </div>

               <div class="row">
                <div class="form-group col-4">
                    <label for="price" class="form-label">Price:</label>
                    <input class="form-control" type="number" id="price" name="price" placeholder=" <%= result.price %>" required><br>
                    <div class="invalid-feedback">
                        Please choose valid price
                    </div>
                </div>

                <div class="form-group col-4">
                    <label for="country" class="form-label">Country:</label>
                    <input class="form-control" type="text" id="country" name="country" value="<%= result.country %> " required><br>
                    <div class="invalid-feedback">
                        Please choose a country
                    </div>
                </div>

               </div>
                <input class="btn btn-outline-danger" type="submit" value="Save Changes">    

            </form>
            </div>
        </div>
    </main> 
</body>
            